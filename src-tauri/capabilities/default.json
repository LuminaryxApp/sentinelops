{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capabilities for the app",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:allow-start-dragging",
    "shell:allow-open",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-ask",
    "dialog:allow-confirm",
    "fs:allow-read",
    "fs:allow-write",
    "process:default",
    "os:default",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "https://*.turso.io/*" },
        { "url": "https://api.lemonsqueezy.com/*" },
        { "url": "https://raw.githubusercontent.com/LuminaryxApp/sentinelops/*" },
        { "url": "https://github.com/LuminaryxApp/sentinelops/releases/*" },
        { "url": "http://localhost:*" },
        { "url": "https://*.vercel.app/*" },
        { "url": "https://*.onrender.com/*" },
        { "url": "https://*.fly.dev/*" }
      ]
    },
    "notification:default",
    "updater:default"
  ]
}
